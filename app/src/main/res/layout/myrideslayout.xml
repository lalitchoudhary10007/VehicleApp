<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_weight="0.3">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
             <ImageView
                 android:id="@+id/carimg"
                   android:layout_width="50dp"
                   android:layout_height="40dp"
                   android:layout_gravity="center"/>

               <apporio.com.vehicleapp.views.TypefaceTextView
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="Pick up"
                   android:textSize="15dp"
                   android:id="@+id/cartype"
                   android:textColor="@color/header_color"
                   geekui:customTypeface="font/Quicksand_Bold.otf"
                   android:gravity="center|left"
                   android:singleLine="true"
                   android:layout_marginRight="2dp"/>

              <apporio.com.vehicleapp.views.TypefaceTextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Dl 01 1234"
                   android:textSize="15dp"
                   android:id="@+id/carnmber"
                   android:textColor="@color/header_color"
                   geekui:customTypeface="font/Quicksand_Bold.otf"
                   android:gravity="center|left"
                  android:singleLine="true"/>
              </LinearLayout>


           <apporio.com.vehicleapp.views.TypefaceTextView
               android:id="@+id/daydate"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Mon,28 March,2016,9.00pm"
               android:textSize="15dp"
               android:textColor="@color/header_color"
               geekui:customTypeface="font/Quicksand_Book.otf"
               android:gravity="center|left"
               android:layout_marginTop="5dp"
               android:singleLine="true"/>

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="80dp"
               android:layout_marginTop="5dp">

               <ImageView
                   android:layout_width="25dp"
                   android:layout_height="match_parent"
                   android:src="@drawable/locationab"
                   android:tint="@color/color_primary"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_marginLeft="30dp">

                 <apporio.com.vehicleapp.views.TypefaceTextView
                     android:id="@+id/pickaddrss"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Sikandrpur metro station"
                       android:textSize="15dp"
                       android:textColor="@color/header_color"
                       geekui:customTypeface="font/Quicksand_Book.otf"
                       android:gravity="center|left|top"
                       android:layout_marginTop="5dp"
                       android:layout_weight="1"
                       android:singleLine="true"/>


                   <apporio.com.vehicleapp.views.TypefaceTextView
                       android:id="@+id/daddress"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Sikandrpur metro station"
                       android:textSize="15dp"
                       android:textColor="@color/header_color"
                       geekui:customTypeface="font/Quicksand_Book.otf"
                       android:layout_marginTop="5dp"
                       android:layout_gravity="bottom"
                       android:layout_weight="1"
                       android:gravity="center|left"
                       android:singleLine="true"/>

               </LinearLayout>

           </FrameLayout>





       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="1">

           <apporio.com.vehicleapp.views.TypefaceTextView
               android:id="@+id/bill"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="$ 12.00"
               android:textSize="15dp"
               android:textColor="@color/header_color"
               geekui:customTypeface="font/Quicksand_Bold.otf"
               android:layout_marginTop="5dp"
               android:layout_weight="1"
               android:singleLine="true"/>

           <de.hdodenhof.circleimageview.CircleImageView
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:id="@+id/drvrimg"
               android:layout_width="60dp"
               android:layout_height="60dp"
               app:civ_border_width="1dp"
               app:civ_border_color="@color/color_primary"
               android:layout_weight="1"
               android:layout_gravity="left"/>

       </LinearLayout>

   </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_primary"
        android:id="@+id/view111"
        android:visibility="visible" />


</LinearLayout>
