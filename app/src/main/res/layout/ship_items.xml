<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/shadow_layout">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@drawable/shadow_layout"
            android:padding="7dp">


        <ImageView
        android:id="@+id/pagerimage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="fitXY"
        android:src="@drawable/banner1"
                                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp">




            <apporio.com.vehicleapp.views.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="Special Instruction Is :-"
                geekui:customTypeface="font/Quicksand_Book.otf"
                android:textColor="@color/color_primary"
                android:layout_marginTop="5dp"/>
            <apporio.com.vehicleapp.views.TypefaceTextView
                android:id="@+id/inst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:text="test instruction"
                geekui:customTypeface="font/Quicksand_Book.otf"
                android:textColor="@color/text_color"
                android:layout_marginTop="5dp"
                android:maxLines="2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_color"
                android:layout_marginTop="5dp"/>


            <apporio.com.vehicleapp.views.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="Approximate Weight Is :-"
                geekui:customTypeface="font/Quicksand_Book.otf"
                android:textColor="@color/color_primary"
                />
            <apporio.com.vehicleapp.views.TypefaceTextView
                android:id="@+id/weit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="18dp"
                android:text="100-200"
                geekui:customTypeface="font/Quicksand_Book.otf"
                android:textColor="@color/text_color"
                android:layout_marginTop="5dp"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/text_color"
                android:layout_marginTop="5dp"/>







        </LinearLayout>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color"
        android:layout_marginTop="5dp"/>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">

         <apporio.com.vehicleapp.views.TypefaceTextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:textSize="16dp"
             android:text="Qunatity Is :-"
             geekui:customTypeface="font/Quicksand_Book.otf"
             android:textColor="@color/text_color"
             android:padding="5dp"
             android:layout_gravity="center"/>

         <apporio.com.vehicleapp.views.TypefaceTextView
             android:id="@+id/quantt"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:textSize="14dp"
             android:text="12"
             geekui:customTypeface="font/Quicksand_Book.otf"
             android:textColor="@color/text_color"
             android:padding="5dp"
             android:layout_weight="1"
             android:layout_gravity="center"/>
         <ImageView
             android:id="@+id/close"
             android:layout_width="50dp"
             android:layout_height="40dp"
             android:background="@drawable/close_window"
             android:layout_gravity="right"
            android:layout_marginRight="5dp"/>


     </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_color"
        />



</LinearLayout>
