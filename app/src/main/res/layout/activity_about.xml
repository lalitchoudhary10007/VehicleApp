<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:geekui="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="apporio.com.vehicleapp.NavigationActivities.AboutActivity">

    //////////////////////////////////////////////

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_primary"
        >

        <LinearLayout
            android:id="@+id/aboutback"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:padding="3dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/backwhitev"
                android:tint="@color/text_color"/>

        </LinearLayout>

        <apporio.com.vehicleapp.views.TypefaceTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="About"
            geekui:customTypeface="font/Quicksand_Book.otf"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />

    </LinearLayout>

    ///////////////////////////////////////////////////


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView8"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo" />

        <apporio.com.vehicleapp.views.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Version 1.0.0"
            android:id="@+id/versionnametextV"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_primary"
            android:textSize="20dp"
            geekui:customTypeface="font/Quicksand_Bold.otf"/>
        />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

            <apporio.com.vehicleapp.views.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/abouustextv"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:maxLines="6"
                geekui:customTypeface="font/Quicksand_Book.otf"
                android:layout_marginLeft="5dp"/>
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Splash Screen Photo Credits"-->
            <!--android:id="@+id/textView12"-->
            <!--android:textColor="#ca072902"-->
            <!--android:textSize="18dp"-->
            <!--android:layout_marginBottom="10dp" />-->

            <!--<apporio.com.vehicleapp.views.TypefaceTextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Spinno Solutions"-->
            <!--android:id="@+id/textView1233"-->
            <!--android:textColor="#000"-->
            <!--geekui:customTypeface="fonts/JosefinSans-Bold.ttf"-->
            <!--android:textSize="18dp" />-->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tandclayout"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <apporio.com.vehicleapp.views.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:id="@+id/tnc"
                android:layout_gravity="center_horizontal"
                android:gravity="left|center"
                android:textColor="@color/color_primary"
                android:textSize="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                geekui:customTypeface="font/Quicksand_Bold.otf"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/color_primary"
                android:id="@+id/viewwwqq22ww1122"
                android:visibility="visible"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>







</LinearLayout>
