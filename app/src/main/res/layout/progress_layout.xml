<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:geekui="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:background="#000">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_in_waiting"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

        <apporio.com.vehicleapp.views.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We Are Searching Driver For You ..."
            android:id="@+id/tedx"
            geekui:customTypeface="font/Quicksand_Bold.otf"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"/>



        <FrameLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.github.lzyzsd.circleprogress.DonutProgress
                android:id="@+id/donut_progress"
                android:layout_width="300dp"
                android:layout_height="300dp"

                custom:donut_unfinished_stroke_width="5dp"
                custom:donut_finished_stroke_width="10dp"

                custom:donut_progress="0"
                custom:donut_inner_bottom_text_size="20dp"
                custom:donut_inner_bottom_text_color="#dec90b"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#000"
                android:layout_gravity="center" />

            <apporio.com.vehicleapp.views.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please Wait ...."
                android:id="@+id/txter"
                geekui:customTypeface="font/Quicksand_Bold.otf"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </FrameLayout>

        </LinearLayout>

    </FrameLayout>



</LinearLayout>